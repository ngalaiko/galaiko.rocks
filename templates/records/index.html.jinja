{% extends "_layout.html.jinja" %}

{% block head %}
    <link rel="stylesheet" href="{{ "/styles/grid.css" | static_with_hash }}">
{% endblock %}

{% block title %}/records/{% endblock %}

{% block content %}
    <ul>
    {%- for record in records|sort(attribute="date_added",reverse=True) %}
        <li>
            <a href="https://www.discogs.com/release/{{ record.id }}">
                <figure>
                    <img
                        width="200"
                        src="{{ record.basic_information.title | slugify }}.jpeg.200x0@2x.webp"
                        loading="lazy"
                        alt="Cover of {{ record.basic_information.title }} album"
                    />
                    <figcaption>
                        <p style="text-align: center;">
                            <span>
                                {{ record.basic_information.title }}
                            </span>
                            <br />
                            <span>
                                {{ record.basic_information.artists[0].name }}
                            </span>
                        </p>
                    </figcaption>
                </figure>
            </a>
        </li>
    {%- endfor %}
    </ul>
{% endblock %}
